<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="singareddy.productionapps.capturethemoment">

    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        android:windowSoftInputMode="adjustResize">
        <activity android:name=".book.details.EditBookActivity"></activity>
        <activity android:name=".book.details.BookDetailsActivity"></activity>
        <activity
            android:name=".book.addbook.AddBookActivity" />
        <activity
            android:name=".user.profile.ProfileUpdateActivity"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".user.auth.SignupActivity" />
        <activity
            android:name=".user.auth.MobileLogin"
            android:parentActivityName=".user.auth.LoginActivity" />
        <activity android:name=".user.auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".ExperimentActivity">

        </activity>
        
        <provider
            android:authorities="${applicationId}.provider"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

    </application>

</manifest>