<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBasicTheme" parent="Theme.AppCompat.Light">
        <item name="colorPureWhite">@android:color/white</item>
        <item name="colorMainBackground">?sceneBackgroundColor</item>
        <item name="textLabelColor">?themeColor</item>
        <item name="textInputColor">?themeColor</item>
        <item name="textInputHintColor">?colorPrimaryDarkVariant</item>
        <item name="textInputBackgroundTintColor">?colorPrimary</item>
        <item name="checkBoxBackgroundTintColor">?themeColor</item>
        <item name="buttonBackgroundColor">?colorPrimaryDark</item>
        <item name="buttonTextColor">?themeColor</item>
        <item name="sceneBackgroundColor">?colorPureWhite</item>
        <item name="drawableIconColor">?themeColor</item>
        <item name="dividerColor">?themeColor</item>
        <item name="fabBackgroundColor">?themeColor</item>
        <item name="fabIconColor">?colorPrimary</item>
        <item name="spinnerBackgroundTintColor">?themeColor</item>
        <item name="spinnerItemColor">?themeColor</item>

        <item name="actionBarStyle">@style/AppActionBar</item>
        <item name="drawerArrowStyle">@style/AppDrawerArrowStyle</item>
    </style>

    <style name="ThemeOrange" parent="AppBasicTheme">
        <item name="colorPrimary">@color/colorOrangeLight</item>
        <item name="colorPrimaryDark">@color/colorOrangeDark</item>
        <item name="colorPrimaryDarkVariant">@color/colorOrangeDarkVariant</item>
        <item name="colorAccent">@color/colorBrown</item>
        <item name="colorRegularText">@color/colorBrown</item>
        <item name="themeColor">@color/colorBrown</item>
    </style>

    <style name="ThemeBlue" parent="AppBasicTheme">
        <item name="colorPrimary">@color/colorBlueLight</item>
        <item name="colorPrimaryDark">@color/colorBlueDark</item>
        <item name="colorPrimaryDarkVariant">@color/colorBlueDarkVariant</item>
        <item name="colorAccent">@color/colorNavy</item>
        <item name="colorRegularText">@color/colorNavy</item>
        <item name="themeColor">@color/colorNavy</item>
    </style>
    
    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/textInputColor</item>
        <item name="android:textColorHint">?attr/textInputHintColor</item>
        <item name="android:background">@drawable/background_edittext</item>
    </style>

    <style name="AppTextView">
        <item name="android:textColor">?attr/textLabelColor</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
    </style>

    <style name="AppFAB" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">?attr/fabBackgroundColor</item>
    </style>

    <style name="AppSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">?attr/spinnerBackgroundTintColor</item>
        <item name="android:textColor">?attr/spinnerItemColor</item>
        <item name="android:titleTextColor">?attr/spinnerItemColor</item>
    </style>

    <style name="AppEditTextImageView">
        <item name="android:background">@drawable/backrground_edittext_icons</item>
    </style>

    <style name="AppActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/AppActionBarTitle</item>
        <item name="background">?colorMainBackground</item>
        <item name="android:windowElevation">5dp</item>
    </style>

    <style name="AppActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?themeColor</item>
    </style>

    <style name="AppDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:color">?themeColor</item>
        <item name="android:colorBackground">?themeColor</item>
    </style>

</resources>
