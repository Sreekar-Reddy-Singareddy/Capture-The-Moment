<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_big_card_back_cl_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/fragment_big_card_back_iv_date"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_big_card_back_tv_date"
        app:layout_constraintEnd_toStartOf="@+id/fragment_big_card_back_tv_date"
        app:layout_constraintTop_toTopOf="@+id/fragment_big_card_back_tv_date"
        app:srcCompat="@drawable/calendar" />

    <TextView
        style="@style/AppTextView"
        android:id="@+id/fragment_big_card_back_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="3rd May 2019"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/AppTextView"
        android:id="@+id/fragment_big_card_back_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:lineSpacingExtra="4sp"
        android:text="This is an event that occured on May 3rd of this year. This is the first event that has occured in a very long time now...! This is an event that occured on May 3rd of this year. This is the first event that has occured in a very long time now...!"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_big_card_back_tv_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_big_card_back_tv_date" />

    <ImageView
        android:id="@+id/fragment_big_card_back_iv_location"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_big_card_back_tv_location"
        app:layout_constraintEnd_toStartOf="@+id/fragment_big_card_back_tv_location"
        app:layout_constraintTop_toTopOf="@+id/fragment_big_card_back_tv_location"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/location_pin" />

    <TextView
        style="@style/AppTextView"
        android:id="@+id/fragment_big_card_back_tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Mysore, Karnataka"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>