<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profile_tv_shared_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="12"
        app:layout_constraintStart_toEndOf="@+id/profile_fragment_email_data"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_name_data" />

    <TextView
        android:id="@+id/profile_fragment_email_data2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Shared Books"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_tv_shared_books"
        app:layout_constraintStart_toEndOf="@+id/profile_tv_shared_books" />

    <TextView
        android:id="@+id/profile_fragment_name_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="User Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_fragment_profile_pic"
        app:layout_constraintTop_toTopOf="@+id/profile_fragment_profile_pic" />

    <TextView
        android:id="@+id/profile_tv_owned_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="12"
        app:layout_constraintStart_toEndOf="@+id/profile_fragment_profile_pic"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_name_data" />

    <TextView
        android:id="@+id/profile_fragment_email_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Owned Books"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_tv_owned_books"
        app:layout_constraintStart_toEndOf="@+id/profile_tv_owned_books" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/profile_fragment_profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/profile_bt_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/holo_blue_light"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:text="edit profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_fragment_profile_pic" />

    <View
        android:id="@+id/profile_div_top"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_bt_edit">

    </View>

    <TextView
        android:id="@+id/profile_tv_recent_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Recent Activity"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_div_top" />


    <View
        android:id="@+id/profile_div_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/profile_tv_recent_activity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="8dp">

    </View>

</android.support.constraint.ConstraintLayout>